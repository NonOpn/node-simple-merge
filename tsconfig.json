{
    "compilerOptions": {
      "declaration": true,
      "suppressImplicitAnyIndexErrors": true,
      "target": "es6",
      "module": "commonjs",
      "esModuleInterop": true,
      "outDir": "./dist",
      "sourceMap": true,
      "experimentalDecorators": true,
      "lib": ["dom", "es2015", "es2016"],
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "noEmitHelpers": false,
      "importHelpers": false,
      "strict": true,
      "jsx": "preserve",
      "noImplicitReturns": true,
      "skipLibCheck": true
    },
    "files": [
        "lib/index.ts"
        "tests/index.ts"
    ],
    "include": [ "lib", "lib/*", "tests/*" ],
    "exclude": [
      "dist",
      "node_modules"
    ]
  }
  